{
  "brand_voice": "Confident, friendly, concrete; no hype. Use inclusive, accessible language that welcomes all audiences.",
  "reading_level": "Grade 8-10",
  "must_use": [
    "accessible",
    "inclusive",
    "people with disabilities",
    "everyone",
    "all users"
  ],
  "must_avoid": [
    "revolutionary",
    "disruptive",
    "AI magic",
    "guys",
    "simple",
    "easy",
    "just",
    "obviously",
    "clearly",
    "seamlessly",
    "effortlessly",
    "normal users",
    "average person",
    "typical user",
    "crazy",
    "insane",
    "lame",
    "dumb",
    "stupid",
    "blind to",
    "deaf to",
    "turn a blind eye",
    "falls on deaf ears"
  ],
  "terminology": {
    "user": "person",
    "users": "people",
    "customer": "person",
    "customers": "people",
    "disabled": "person with disabilities",
    "handicapped": "person with disabilities",
    "normal": "typical",
    "abnormal": "atypical",
    "suffers from": "has",
    "victim of": "person with",
    "wheelchair-bound": "person who uses a wheelchair",
    "confined to a wheelchair": "person who uses a wheelchair",
    "hearing impaired": "deaf or hard of hearing",
    "visually impaired": "blind or has low vision",
    "crazy idea": "innovative idea",
    "insane solution": "remarkable solution"
  },
  "formatting": {
    "headings": "Title Case",
    "bullets_max": 5
  }
}
